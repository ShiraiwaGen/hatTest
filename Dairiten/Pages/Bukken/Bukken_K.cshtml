@page
@model Dairiten.Pages.Bukken_KModel
@{
    ViewData["Title"] = "物件情報検索";
}

<div class="container-fluid g-1">
    <div class="text-start">
        <h4 class="" style="background:#DCDCDC">物件情報検索</h4>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-0">
            <div class="col-md-6">            
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">物件番号</div>
                <div class="form-group">
                    <div class="atai2 mb-1">
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <input type="text" class="form-control form-control-sm" id="bukken_no" asp-for="Input.bukken_no">
                            </div>
                            <label for="bukken_no" class="col-sm-3 col-form-label col-form-label-sm text-red">(半角)</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">郵便番号</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm" id="b_zip" asp-for="Input.b_zip">
                        </div>
                        <label for="zipcode" class="col-sm-3 col-form-label col-form-label-sm text-red">(半角)</label>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">住所</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="b_address1" asp-for="Input.b_address1">
                        </div>
                        <label for="jusho" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                    </div>
                </div>
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">丁目・番地</div>
                    <div class="atai2 mb-1">
                        <div class="row mb-3">
                            <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="b_address2" asp-for="Input.b_address2">
                            </div>
                            <label for="chome" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                        </div>
                    </div>
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">建物名</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="b_address3" asp-for="Input.b_address3">
                        </div>
                        <label for="tatemono" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary" style="width: 150px;" onclick="clearFormAll()">クリア</button>
            @*<button type="submit" class="btn btn-primary" style="width: 150px;" asp-page-handler="Handle1" onclick="show_loading()">検索</button>*@
            <input type="submit" class="btn btn-primary" style="width: 150px;" asp-page-handler="Handle10" value="検索" onclick="show_loading()" />
        </div>
    </form>

    @if (Model.mylist.Count > 0)
        {
        <p>物件一覧</p>
        <div class="text-center">
            <table id="mytable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            建物名
                        </th>
                        <th>
                            号室
                        </th>
                        <th>
                            物件番号
                        </th>
                        <th>
                            郵便番号
                        </th>
                        <th>
                            住所
                        </th>
                        <th>
                            戸建て
                        </th>
                        <th>
                            代理店
                        </th>
                        <th>
                            申込
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.mylist)
                    {
                        <tr>
                            <td rowspan=2>
                                @Html.Raw(item.b_address3)
                            </td>
                            <td rowspan=2>
                                @Html.Raw(item.b_address5)
                            </td>
                            <td rowspan=2>
                                @Html.Raw(item.bukken_no)
                            </td>
                            <td rowspan=2>
                                @Html.Raw(item.b_zip)
                            </td>
                            <td>
                                @Html.Raw(item.b_address1)
                            </td>
                            <td rowspan=2>
                                @Html.Raw(item.b_kodate)
                            </td>
                            <td rowspan=2>
                                @Html.Raw(item.m_dairiten_id)
                            </td>
                            <td rowspan=2>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Raw(item.b_address2)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
