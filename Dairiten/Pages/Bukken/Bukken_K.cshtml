@page
@model Dairiten.Pages.Bukken_KModel
@{
    ViewData["Title"] = "物件情報検索";
}

<div class="container-fluid g-1">
    <div class="text-start">
        <h4 class="" style="background:#DCDCDC">物件情報検索</h4>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-0">
            <div class="col-md-6">            
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">物件番号</div>
                <div class="form-group">
                    <div class="atai2 mb-1">
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <input type="text" class="form-control form-control-sm" id="bukken_no">
                            </div>
                            <label for="bukken_no" class="col-sm-3 col-form-label col-form-label-sm text-red">(半角)</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">郵便番号</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm" id="zipcode">
                        </div>
                        <label for="zipcode" class="col-sm-3 col-form-label col-form-label-sm text-red">(半角)</label>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">住所</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="jusho">
                        </div>
                        <label for="jusho" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                    </div>
                </div>
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">丁目・番地</div>
                    <div class="atai2 mb-1">
                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-sm" id="chome">
                            </div>
                            <label for="chome" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                        </div>
                    </div>
                <div class="komoku1 text-white mb-1" style="margin-right: 11px;">建物名</div>
                <div class="atai2 mb-1">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="tatemono">
                        </div>
                        <label for="tatemono" class="col-sm-2 col-form-label col-form-label-sm text-red">(全角)</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-end">
            <button type="button" class="btn btn-primary" style="width: 150px;" onclick="clearFormAll()">クリア</button>
            <button type="button" class="btn btn-primary" style="width: 150px;">検索</button>
        </div>
    </form>

    <p>物件一覧</p>
    <div class="text-center">
        <p>物件表示</p>
    </div>
</div>
